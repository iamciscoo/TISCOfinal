# TISCO Market Environment Variables
# Copy this file to .env.local and fill in your actual values

# =================
# SUPABASE CONFIG
# =================
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE=your_supabase_service_role_key_here

# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api

# =================
# OPTIONAL CONFIGS
# =================
# Currency API (for real exchange rates)
# CURRENCY_API_KEY=your_currency_api_key

# Email service (for notifications)
# RESEND_API_KEY=your_resend_api_key
# SendPulse (optional, preferred for SMTP emails)
# SENDPULSE_CLIENT_ID=your_sendpulse_client_id
# SENDPULSE_CLIENT_SECRET=your_sendpulse_client_secret
# SENDPULSE_SENDER_EMAIL=your_sender_email@example.com
# SENDPULSE_SENDER_NAME=TISCO

# Payment processing (for future)
# STRIPE_PUBLISHABLE_KEY=your_stripe_public_key
# STRIPE_SECRET_KEY=your_stripe_secret_key
WEBHOOK_SECRET=your_payments_webhook_secret_here

# ZenoPay Mobile Money (TZ) Integration
# Default base URL aligns with public docs: https://zenoapi.com/api/payments
ZENOPAY_BASE_URL=https://zenoapi.com/api/payments
ZENOPAY_API_KEY=your_zenopay_api_key
# Optional: disable remote status checks (PENDING/PROCESSING) by setting to "false"
ZENOPAY_REMOTE_STATUS=true
NEXT_PUBLIC_BASE_URL=http://localhost:3000
# Public base URL for links in emails (production domain recommended)
# NEXT_PUBLIC_APP_URL=https://www.your-custom-domain.com
